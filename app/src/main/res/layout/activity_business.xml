<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.business.BusinessActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorPrimary"
            android:id="@+id/menuBar">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/business_title"
                android:textColor="@color/white"
                android:fontFamily="@font/gtwalsheimmedium"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/backButton"
                android:layout_marginStart="16dp"/>

        <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_back"
                android:padding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/backButton"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="@string/business_save"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/gtwalsheimregular"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/saveButton"/>
    </android.support.constraint.ConstraintLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/menuBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameLayout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_white_rounded_rectangle"
                    android:layout_marginBottom="32dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/launch_prompt_name"
                        android:fontFamily="@font/gtwalsheimmedium"
                        android:inputType="text"
                        android:id="@+id/nameEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addressLayout"
                    app:layout_constraintTop_toBottomOf="@id/nameLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_white_rounded_rectangle"
                    android:layout_marginBottom="32dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/launch_prompt_address"
                        android:fontFamily="@font/gtwalsheimmedium"
                        android:inputType="textMultiLine"
                        android:id="@+id/addressEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailLayout"
                    app:layout_constraintTop_toBottomOf="@id/addressLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_white_rounded_rectangle"
                    android:layout_marginBottom="32dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/launch_prompt_email"
                        android:fontFamily="@font/gtwalsheimmedium"
                        android:inputType="textEmailAddress"
                        android:id="@+id/emailEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phoneLayout"
                    app:layout_constraintTop_toBottomOf="@id/emailLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/bg_white_rounded_rectangle"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/launch_prompt_phone"
                        android:fontFamily="@font/gtwalsheimmedium"
                        android:inputType="phone"
                        android:id="@+id/phoneEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/launch_prompt_currency"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/gtwalsheimmedium"
                    android:textSize="18sp"
                    android:background="@drawable/bg_white_rounded_rectangle_grey"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintTop_toBottomOf="@id/phoneLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:drawableEnd="@drawable/ic_drop_down_arrow"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="16dp"
                    android:id="@+id/currencyButton"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:elevation="3dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0.8"
            android:id="@+id/popupLayout">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currencyRecyclerView"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>